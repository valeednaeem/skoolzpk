{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNEXT",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/blog/page.jsx",
    "src/app/api/auth/[auth0]/route.js",
    "src/app/advertise/page.jsx",
    "src/app/aboutus/page.jsx",
    "next.config.js",
    "next.config.js"
, "src/components/ui/accordion.jsx", "src/app/page.jsx", "src/app/layout.jsx", "src/app/termsconditions/page.jsx", "src/app/teachers/page.jsx", "src/app/support/page.jsx", "src/app/privacypolicy/page.jsx", "src/app/courses/page.jsx", "src/app/contactus/page.jsx", "src/app/careers/page.jsx"  ],
  "exclude": [
    "node_modules"
  ]
}